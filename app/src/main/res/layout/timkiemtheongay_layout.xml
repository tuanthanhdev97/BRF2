<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#005baa">
        <!--android:background="@drawable/ic_logo_banner"-->
        <ImageButton
            android:layout_marginLeft="5dp"
            android:id="@+id/btnBackday"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/imgbckinhdoanhMenu"
            android:id="@+id/toolbarbaocaokinhdoanh"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/ic_logo_banner"
            android:layout_centerHorizontal="true"
            android:minHeight="?attr/actionBarSize"
            ></ImageView>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/btnSearchMorengay"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/icon_search">
        </ImageView>
    </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/lnInfor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:id="@+id/txtTP"
        />
    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="5dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="italic"
                android:layout_toRightOf="@+id/txt2"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtInforStartDate"
                />
            <TextView
                android:layout_toRightOf="@+id/txtInforStartDate"
                android:textSize="16sp"
                android:text="-"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt3"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:textStyle="italic"
                android:layout_toRightOf="@+id/txt3"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:id="@+id/txtInforEndDate"

                />
        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="70dp"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rlContent"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/titless"
                android:layout_width="match_parent"
                android:weightSum="3"
                android:background="@color/chitieu"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtSapxepNgay"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="Ngày"
                    android:textColor="@color/bk_bckinhdoanh_left" />
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bk_bckinhdoanh_left"
                    android:id="@+id/txtSapxepDoanhthu"
                    android:text="Doanh Thu (tr)"
                    android:padding="10dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/txtSapxepBieuDo"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bk_bckinhdoanh_left"
                    android:text="Biểu đồ"
                    android:padding="10dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/titless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtNoti"
                    android:layout_width="300dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textColor="@color/colorChartThang"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
                <ListView
                    android:id="@+id/lvDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ListView>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>