<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="9">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="#e4ecf1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtdongBCKHAFYPCongty"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:text="Công ty"
                android:textColor="#8e8e8b"
                android:textSize="15sp"
                android:layout_marginStart="1dp"/>

            <TextView
                android:id="@+id/txtdongBCKHAFYPTongctygiao"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:text="Tổng Công ty giao"
                android:textColor="#8e8e8b"
                android:textSize="15sp"
                android:gravity="right"/>
            <TextView
                android:id="@+id/txtdongBCKHAFYPT1"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:text="Tháng 1"
                android:textColor="#8e8e8b"
                android:textSize="15sp"
                android:gravity="right"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>